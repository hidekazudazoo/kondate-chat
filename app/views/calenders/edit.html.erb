<section class="py-5 text-center container">

<h1>メニュー編集</h1>

  <%= form_with model: [@user, @calender], url: user_calender_path(@user.id), local: true do |f| %>

    <div class="menu">
      <div class="form-tag">メニュー</div>
      <%= f.text_field :menu %>
    </div>


    <div class="content">
      <div class="form-tag">内容</div>
      <%= f.text_field :content %>
    </div>

      <div class="time">
      <div class="form-tag">日程</div>
      <%= f.date_select :date %>
    </div>

  <div class="submit">
      <%= f.submit %>
  </div>

  <% end %>

  <%= link_to '戻る', user_calender_path %>

</section>