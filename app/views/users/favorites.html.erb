<section class="py-5 text-center container">
<h1>お気に入り一覧</h1>
<div class="recipe-lists">
  <% @favorite_recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe.id), class: "recipe-link" do %>
      <div class="recipe-title">
        <%= recipe.title %>
      </div>
      <div class="recipe-headline">
        <%= recipe.headline %>
      </div>
      <%= image_tag recipe.image.variant(resize: '700 x 700'), class: 'recipe-image' %>
    <% end %>
  <% end %>
</div>
<div class="back-btn">
  <%= link_to "戻る", user_path(@user), class: "btn btn-primary" %>
</div>
</section>