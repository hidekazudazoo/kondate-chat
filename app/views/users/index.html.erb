<section class="py-5 text-center container">
<h1>投稿済みレシピ</h1>
<div class="recipe-lists">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_path(recipe.id), class: "recipe-link" do %>
      <div class="recipe-title">
        <%= recipe.title %>
      </div>
      <div class="recipe-headline">
        <%= recipe.headline %>
      </div>
      <%= image_tag recipe.image.variant(resize: '700 x 700'), class: 'recipe-image' %>
    <% end %>
  <% end %>
</div>
<%= link_to "戻る", user_path(@users), class: "btn btn-primary" %>
</section>